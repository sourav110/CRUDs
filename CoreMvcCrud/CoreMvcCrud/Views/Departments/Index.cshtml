@model IEnumerable<CoreMvcCrud.Entities.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Departments</h2>
<hr />

<table class="table table-bordered table-striped">
    <thead class="thead-inverse">
        <tr>
            <th class="font-weight-bold">Department Name</th>
            <th class="font-weight-bold">Abbr</th>
            <th class="font-weight-bold">Actions <a asp-action="Create" class="btn btn-info">Create New</a></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count() > 0)
        {
            @foreach (var dept in Model)
            {
                <tr>
                    <td>
                        @dept.Name
                    </td>
                    <td>
                        @dept.Abbr
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@dept.Id">Edit</a> |
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@dept.Id">Delete</a> |
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@dept.Id">View Details</a>
                    </td>
                </tr>
            }
        }

        else
        {
            <tr>
                <td class="text-danger" colspan="5">
                    No Departments found
                </td>
            </tr>
        }
    </tbody>
</table>


