@model CoreMvcCrud.Entities.Student

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Details</h2>
<hr />

<form asp-action="Details">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label>Name</label>
                <input asp-for="Name" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label>RegistrationNo</label>
                <input asp-for="RegistrationNo" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label>Department</label>
                <input asp-for="Department.Name"class="form-control" readonly />
            </div>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-warning">Back to list</a>
</form>

