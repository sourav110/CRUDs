@model CoreMvcCrud.Entities.Student

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Edit Student</h2>
<hr />

<form method="post" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label>Name <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Abbr <span class="text-danger">*</span></label>
                <input asp-for="RegistrationNo" class="form-control" />
                <span asp-validation-for="RegistrationNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Department</label>
                <select asp-for="DepartmentId" class="form-control">
                    <option value="0">Select Department</option>
                    @foreach (var dept in Model.Departments)
                    {
                        var selected = dept.Id == Model.DepartmentId ? "selected" : string.Empty;
                        <option value="@dept.Id" selected>@dept.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-danger">Cancel</a>
</form>


