@model MvcCrud.Models.Department

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Edit Department</h2>
<hr />

<form method="post">
    <input name="Id" value="@Model.Id" hidden />

    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label>Name <span class="text-danger">*</span></label>
                <input name="Name" value="@Model.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label>Abbr <span class="text-danger">*</span></label>
                <input name="Abbr" value="@Model.Abbr" class="form-control" />
            </div>
        </div>
    </div>

    <button href="@Url.Action("Edit", "Departments")" class="btn btn-primary">Update</button>
    <a href="@Url.Action("Index", "Departments")" class="btn btn-danger">Cancel</a>
</form>