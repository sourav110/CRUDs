@model MvcViewModelCrud.Models.Student

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Details</h2>
<hr />

<form method="post">
    <input name="Id" value="@Model.Id" hidden />

    <div class="row">
        <div class="col-md-10">
            <div class="form-group">
                <label>Name</label>
                <input name="Name" value="@Model.Name" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label>Registration No.</label>
                <input name="RegistrationNo" value="@Model.RegistrationNo" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label>Department</label>
                <input name="Department" value="@Model.Department.Name" class="form-control" readonly />
            </div>
        </div>
    </div>
    <a href="@Url.Action("Index", "Students")" class="btn btn-warning">Back to List</a>
</form>